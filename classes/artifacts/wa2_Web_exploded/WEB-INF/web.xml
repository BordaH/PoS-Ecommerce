<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <servlet>
        <servlet-name>EcommerceService</servlet-name>
        <servlet-class>com.pos.ecommerce.server.EcommerceServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EcommerceService</servlet-name>
        <url-pattern>/Ecommerce/EcommerceService</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MercadoPagoService</servlet-name>
        <servlet-class>com.pos.ecommerce.server.MercadoPagoService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MercadoPagoService</servlet-name>
        <url-pattern>/Ecommerce/checkMP</url-pattern>
    </servlet-mapping>
</web-app>
